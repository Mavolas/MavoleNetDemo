<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:text="文件选择"
        android:onClick="FileChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="get请求测试"
        android:onClick="RequestGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Post请求测试"
        android:onClick="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="PostJson请求测试"
        android:onClick="PostJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="PostWithFiles请求测试"
        android:onClick="PostWithFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="单个文件上传"
        android:onClick="FileUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="下载"
        android:onClick="Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>